<%- include("partials/header") %> 
    <div class="container">
        <div class="row mt-3">
            <% cities.forEach((city) => { %>
                <div class="card m-2 p-0">
                    <a href="/cities/<%= city._id %>">
                        <img class="card-img card-img-top" src="<%= city.image %>" alt="Picture of the city">
                    </a>
                    <h3 class="card-name mt-3"><%= city.cityName %> </h3>
                    <p class="card-text mb-3 mx-3"><%= city.description %> </p>
                </div>
            <% }) %> 
        </div>
    </div>
<%- include("partials/footer") %> 