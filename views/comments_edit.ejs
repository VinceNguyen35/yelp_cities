<%- include("partials/header") %>

<div class="container">
    <h1>Edit Comment</h1>
    <form action="/cities/<%= city._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group mb-3">
            <label for="text" class="form-label">Comment Text</label>
            <textarea name="text" id="text" class="form-control" cols="80" rows="8" required><%= comment.text %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">
            Submit Comment
        </button>
    </form>
</div>

<%- include("partials/footer") %>